<?xml version="1.0"?>
<launch>
  <arg name="limited" default="true"/>
  <arg name="paused" default="false"/>
  <arg name="gui" default="true"/>
  <arg name="debug" default="false" />
  <arg name="sim" default="true" />

  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" default="$(find ur5_t2_4230)/world/ur5_world.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="gui" value="$(arg gui)"/>
		<arg name="debug" value="$(arg debug)" />
		<arg name="use_sim_time" value="true" />
  </include>

  <!-- spwan ur5 -->
  <!-- send robot urdf to param server -->
  <include file="$(find ur_description)/launch/ur5_upload.launch">
    <arg name="limited" value="$(arg limited)"/>
  </include>

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model robot -z 0.05 -y -0.4" respawn="false" output="screen" />

  <include file="$(find ur_gazebo)/launch/controller_utils.launch"/>

  <rosparam file="$(find ur_gazebo)/controller/arm_controller_ur5.yaml" command="load"/>
  <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn arm_controller" respawn="false" output="screen"/>

  <!-- Remap follow_joint_trajectory -->
  <remap if="$(arg sim)" from="/follow_joint_trajectory" to="/arm_controller/follow_joint_trajectory"/>

  <!-- Launch moveit -->
  <include file="$(find ur5_moveit_config)/launch/move_group.launch">
    <arg name="limited" default="$(arg limited)"/>
    <arg name="debug" default="$(arg debug)" />
  </include>
	
	<!-- Spawn the cubes -->
	<node name="spawn_greencube" pkg="gazebo_ros" type="spawn_model" args="-file $(find ur5_t2_4230)/urdf/green_cube.urdf -urdf -model green_cube"/>

	<node name="spawn_bluecube" pkg="gazebo_ros" type="spawn_model" args="-file $(find ur5_t2_4230)/urdf/blue_cube.urdf -urdf -model blue_cube -y 0.2 -x 0 -z 0.05"/>

	<node name="spawn_redcube" pkg="gazebo_ros" type="spawn_model" args="-file $(find ur5_t2_4230)/urdf/red_cube.urdf -urdf -model red_cube -y 0.4 -x 0 -z 0.05 "/> 
	
	<!-- Spawn the cylinders -->
	<node name="spawn_greencylinder" pkg="gazebo_ros" type="spawn_model" args="-file $(find ur5_t2_4230)/urdf/green_cylinder.urdf -urdf -model green_cylinder -y 0 -x -0.3 -z 0.05"/>

	<node name="spawn_bluecylinder" pkg="gazebo_ros" type="spawn_model" args="-file $(find ur5_t2_4230)/urdf/blue_cylinder.urdf -urdf -model blue_cylinder -y 0.2 -x -0.3 -z 0.05"/>

	<node name="spawn_redcylinder" pkg="gazebo_ros" type="spawn_model" args="-file $(find ur5_t2_4230)/urdf/red_cylinder.urdf -urdf -model red_cylinder -y 0.4 -x -0.3 -z 0.05"/>

	<!-- Spawn the long bois -->
	<node name="spawn_greenlong" pkg="gazebo_ros" type="spawn_model" args="-file $(find ur5_t2_4230)/urdf/green_longboi.urdf -urdf -model green_longboi -y 0 -x -0.6 -z 0.05"/>

	<node name="spawn_bluelong" pkg="gazebo_ros" type="spawn_model" args="-file $(find ur5_t2_4230)/urdf/blue_longboi.urdf -urdf -model blue_longboi -y 0.2 -x -0.6 -z 0.05"/>

	<node name="spawn_redlong" pkg="gazebo_ros" type="spawn_model" args="-file $(find ur5_t2_4230)/urdf/red_longboi.urdf -urdf -model red_longboi -y 0.4 -x -0.6 -z 0.05"/>

	<!-- Spawn the spheres -->
	<node name="spawn_greensphere" pkg="gazebo_ros" type="spawn_model" args="-file $(find ur5_t2_4230)/urdf/green_sphere.urdf -urdf -model green_sphere -y 0 -x 0.3 -z 0.05"/>

	<node name="spawn_bluesphere" pkg="gazebo_ros" type="spawn_model" args="-file $(find ur5_t2_4230)/urdf/blue_sphere.urdf -urdf -model blue_sphere -y 0.2 -x 0.3 -z 0.05"/>

	<node name="spawn_redsphere" pkg="gazebo_ros" type="spawn_model" args="-file $(find ur5_t2_4230)/urdf/red_sphere.urdf -urdf -model red_sphere -y 0.4 -x 0.3 -z 0.05"/>

	<!-- Spawn the table -->
	<node name="spawn_table" pkg="gazebo_ros" type="spawn_model" args="-file $(find ur5_t2_4230)/urdf/table.urdf -urdf -model table -y -1.4 -x 0.0 -z 0.0"/>
	
	<!-- Spawn the container that holds the items picked up -->
	<node name="spawn_container" pkg="gazebo_ros" type="spawn_model" args="-file $(find ur5_t2_4230)/urdf/container.urdf -urdf -model container -y -0.8 -x 0 -z 0"/>

</launch>
